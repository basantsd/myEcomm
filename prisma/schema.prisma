// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Authentication
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts          Account[]
  sessions          Session[]
  platformConnections PlatformConnection[]
  products          Product[]
  orders            Order[]
  messages          Message[]
  agentConfigs      AgentConfig[]
  agentActions      AgentAction[]
  notifications     Notification[]
}

enum UserRole {
  USER
  ADMIN
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Platform Connections
model PlatformConnection {
  id              String           @id @default(cuid())
  userId          String
  platform        Platform
  platformUserId  String?
  platformShopId  String?
  accessToken     String           // Encrypted
  refreshToken    String?          // Encrypted
  expiresAt       DateTime?
  scope           String?
  status          ConnectionStatus @default(ACTIVE)
  metadata        Json?            // Platform-specific data
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, platform])
  @@index([userId])
  @@index([platform])
}

enum Platform {
  EBAY
  AMAZON
  ETSY
  WALMART
  SHOPIFY
  WOOCOMMERCE
  BIGCOMMERCE
  WIX
  GOOGLE_SHOPPING
  MICROSOFT_SHOPPING
  REVERB
  DISCOGS
  PRINTIFY
  PRINTFUL
  FLIPKART
  MERCADO_LIBRE
  LAZADA
  SHOPEE
  ALLEGRO
  BOL
  ZALANDO
  COUPANG
}

enum ConnectionStatus {
  ACTIVE
  EXPIRED
  DISCONNECTED
  ERROR
}

// Products
model Product {
  id          String         @id @default(cuid())
  userId      String
  sku         String         @unique
  title       String
  description String?
  price       Decimal        @db.Decimal(10, 2)
  compareAtPrice Decimal?    @db.Decimal(10, 2)
  costPrice   Decimal?       @db.Decimal(10, 2)
  quantity    Int            @default(0)
  images      String[]
  category    String?
  tags        String[]
  variants    Json?          // For size, color, etc.
  metadata    Json?          // Additional product data
  status      ProductStatus  @default(DRAFT)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  user              User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  platformListings  PlatformListing[]
  inventoryLogs     InventoryLog[]
  orderItems        OrderItem[]

  @@index([userId])
  @@index([sku])
}

enum ProductStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

// Platform-specific listings
model PlatformListing {
  id                String   @id @default(cuid())
  productId         String
  platform          Platform
  platformProductId String
  platformUrl       String?
  price             Decimal  @db.Decimal(10, 2)
  quantity          Int
  status            String
  lastSyncedAt      DateTime @default(now())
  syncErrors        String?
  metadata          Json?    // Platform-specific listing data
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, platform])
  @@index([productId])
  @@index([platform])
}

// Orders
model Order {
  id                String      @id @default(cuid())
  userId            String
  platform          Platform
  platformOrderId   String
  platformOrderNumber String?
  customerName      String
  customerEmail     String?
  shippingAddress   Json
  billingAddress    Json?
  subtotal          Decimal?    @db.Decimal(10, 2)
  tax               Decimal?    @db.Decimal(10, 2)
  shipping          Decimal?    @db.Decimal(10, 2)
  total             Decimal     @db.Decimal(10, 2)
  currency          String      @default("USD")
  status            String      @default("PENDING")
  paymentStatus     String?
  fulfillmentStatus String?
  trackingNumber    String?
  trackingUrl       String?
  carrier           String?
  shippingCarrier   String?
  notes             String?
  orderDate         DateTime
  shippedAt         DateTime?
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items      OrderItem[]

  @@unique([userId, platformOrderId])
  @@index([userId])
  @@index([platform])
  @@index([status])
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

model OrderItem {
  id               String   @id @default(cuid())
  orderId          String
  productId        String?
  sku              String
  title            String
  quantity         Int
  price            Decimal  @db.Decimal(10, 2)
  total            Decimal? @db.Decimal(10, 2)
  platformItemId   String?
  metadata         Json?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  order   Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  @@index([orderId])
  @@index([productId])
}

// Inventory Management
model InventoryLog {
  id           String          @id @default(cuid())
  productId    String
  oldQuantity  Int
  newQuantity  Int
  changeReason String?
  platform     Platform?
  orderId      String?
  userId       String?
  createdAt    DateTime        @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([createdAt])
}

enum InventoryChange {
  SALE
  RESTOCK
  ADJUSTMENT
  RETURN
  SYNC
}

// Communication Hub
model Message {
  id          String           @id @default(cuid())
  userId      String
  orderId     String?
  platform    Platform
  messageType String?
  content     String
  response    String?
  status      String           @default("pending")
  sentAt      DateTime?
  respondedAt DateTime?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([platform])
  @@index([status])
}

enum MessagePlatform {
  GMAIL
  WHATSAPP
  TELEGRAM
  SMS
  SLACK
}

enum MessageDirection {
  INBOUND
  OUTBOUND
}

enum MessageStatus {
  UNREAD
  READ
  REPLIED
  ARCHIVED
}

// Sync Jobs
model SyncJob {
  id          String     @id @default(cuid())
  userId      String
  platform    Platform
  type        String
  status      String
  progress    Int        @default(0)
  total       Int?
  details     Json?
  error       String?
  startedAt   DateTime   @default(now())
  completedAt DateTime?
  createdAt   DateTime   @default(now())

  @@index([userId])
  @@index([platform])
  @@index([status])
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

// Webhooks
model Webhook {
  id            String   @id @default(cuid())
  userId        String
  platform      Platform
  event         String
  payload       Json
  status        String   @default("pending")
  processedAt   DateTime?
  error         String?
  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([platform])
  @@index([status])
  @@index([createdAt])
}

// AI Agents
model AgentConfig {
  id              String         @id @default(cuid())
  userId          String
  agentRole       AgentRole
  enabled         Boolean        @default(true)
  automationLevel AutomationLevel @default(SUPERVISED)
  settings        Json?          // Agent-specific configuration
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, agentRole])
  @@index([userId])
  @@index([agentRole])
}

enum AgentRole {
  PRODUCT_MANAGER
  CUSTOMER_SERVICE
  PRICE_OPTIMIZER
  INVENTORY_MANAGER
  ORDER_FULFILLMENT
  MARKETING_SPECIALIST
  ANALYTICS_LEAD
  LISTING_OPTIMIZER
  RETURNS_MANAGER
  GROWTH_HACKER
}

enum AutomationLevel {
  FULL           // Fully autonomous
  SUPERVISED     // Requires approval for major actions
  MANUAL         // User must trigger all actions
}

model AgentAction {
  id          String       @id @default(cuid())
  userId      String
  agentRole   AgentRole
  actionType  String
  description String
  status      ActionStatus @default(PENDING)
  metadata    Json?
  result      Json?
  error       String?
  createdAt   DateTime     @default(now())
  completedAt DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([agentRole])
  @@index([status])
  @@index([createdAt])
}

enum ActionStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
}

model Notification {
  id        String             @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  priority  Priority           @default(MEDIUM)
  read      Boolean            @default(false)
  metadata  Json?
  createdAt DateTime           @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([priority])
  @@index([read])
}

enum NotificationType {
  LOW_STOCK
  OUT_OF_STOCK
  DELAYED_SHIPMENT
  ORDER_ISSUE
  PRICE_CHANGE
  PROMOTION_STARTED
  PROMOTION_ENDED
  SYSTEM_ALERT
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

model Promotion {
  id                  String          @id @default(cuid())
  userId              String
  productId           String
  title               String
  discountPercentage  Int
  startDate           DateTime
  endDate             DateTime
  status              PromotionStatus @default(DRAFT)
  createdAt           DateTime        @default(now())

  @@index([userId])
  @@index([productId])
  @@index([status])
}

enum PromotionStatus {
  DRAFT
  ACTIVE
  PAUSED
  ENDED
}

model MarketingContent {
  id          String        @id @default(cuid())
  userId      String
  productId   String?
  contentType ContentType
  title       String
  content     String
  status      ContentStatus @default(DRAFT)
  createdAt   DateTime      @default(now())
  publishedAt DateTime?

  @@index([userId])
  @@index([productId])
  @@index([contentType])
}

enum ContentType {
  PRODUCT_DESCRIPTION
  BLOG_POST
  SOCIAL_MEDIA
  EMAIL_CAMPAIGN
  AD_COPY
}

enum ContentStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model PriceHistory {
  id         String   @id @default(cuid())
  productId  String
  oldPrice   Decimal  @db.Decimal(10, 2)
  newPrice   Decimal  @db.Decimal(10, 2)
  reason     String?
  changedBy  String
  createdAt  DateTime @default(now())

  @@index([productId])
  @@index([createdAt])
}

model ReorderRecommendation {
  id                  String   @id @default(cuid())
  userId              String
  productId           String
  recommendedQuantity Int
  priority            String
  estimatedCost       Decimal  @db.Decimal(10, 2)
  status              String   @default("pending")
  createdAt           DateTime @default(now())

  @@index([userId])
  @@index([productId])
  @@index([status])
}
